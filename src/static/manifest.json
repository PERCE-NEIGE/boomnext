{
	"name": "Boom Next Video",
	"description": "My first Chrome App.",
	"version": "0.00.001",
	"app": {
		"background": {
			"scripts": ["background.js"]
		}
	},
	// "sandbox": {
	// 	"pages": ["youtube.html"]
	// 	// content_security_policy is optional.
	// 	// "content_security_policy":"sandbox allow-scripts; script-src https://www.youtube.com/*"
	// },
	"webview": {
		"partitions": [
			{
				"name": "static",
				"accessible_resources": ["youtube.html", "youtube.js"]
			}
		]
	},
	"permissions": [
		"webview",
		"fullscreen",
		"http://izismile.com/videos/",
		"http://9gag.com/tv/api/index/*"
	],
	"icons": {
		"16": "boomnext-16.png",
		"128": "boomnext-128.png"
	},
	"manifest_version": 2
}
